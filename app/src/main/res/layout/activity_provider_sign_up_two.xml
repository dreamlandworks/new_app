<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_800"
    android:orientation="vertical"
    tools:context=".ui.auth.provider_signup.ProviderSignUpTwo">

    <include
        android:id="@+id/toolBar"
        layout="@layout/provider_page_tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/onestape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="@string/get_set"
                    android:textColor="@color/vendorPrimaryColor"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/onestape"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="@string/skills"
                    android:textColor="@color/vendorPrimaryColor"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:src="@drawable/ic_profileone"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/verticalcardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/qualification"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_graduation_cap"
                                android:drawablePadding="@dimen/_10sdp"
                                android:hint="@string/academic_qualification"
                                android:inputType="text"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.hootsuite.nachos.NachoTextView
                            android:id="@+id/languages"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/searchbackground"
                            android:drawableStart="@drawable/ic_languagespeak"
                            android:drawablePadding="@dimen/_10sdp"
                            android:hint="@string/languages_known"
                            android:padding="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/keywords_skills"
                            android:textSize="@dimen/_10sdp" />

                        <com.hootsuite.nachos.NachoTextView
                            android:id="@+id/skills"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/searchbackground"
                            android:hint="@string/add_skills"
                            android:paddingHorizontal="@dimen/_10sdp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/skillsRV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/about_me_min_250_words"
                            android:textSize="@dimen/_10sdp" />

                        <EditText
                            android:id="@+id/about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_25sdp"
                            android:background="@drawable/gray_corner"
                            android:drawablePadding="@dimen/_10sdp"
                            android:focusable="true"
                            android:imeOptions="actionDone"
                            android:isScrollContainer="true"
                            android:overScrollMode="always"
                            android:padding="@dimen/_10sdp"
                            android:scrollbars="vertical"
                            android:singleLine="false"
                            android:theme="@style/SignInSignUpEditText"
                            android:windowSoftInputMode="stateAlwaysVisible" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/verticalcardview"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cancelBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/greenborderbutton"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_16sdp"
                        android:text="@string/Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/vendorPrimaryColor"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nextBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@drawable/greenbutton"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_16sdp"
                        android:text="@string/next"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>