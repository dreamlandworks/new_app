<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.auth.provider_signup.provider_sign_up_one.ProviderSignUpOne">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:gravity="start|center"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

            <ImageView
                android:layout_width="@dimen/_600sdp"
                android:layout_height="@dimen/_600sdp"
                android:layout_marginStart="-95dp"
                android:layout_marginTop="-100dp"
                android:scaleType="fitXY"
                android:src="@drawable/provider_bg"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:orientation="vertical"
                android:paddingStart="@dimen/_20sdp"
                android:paddingBottom="@dimen/_50sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/three_more"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing=".06"
                    android:text="@string/steps_to_earn"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_22sdp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="@dimen/_15sdp">

            <AutoCompleteTextView
                android:id="@+id/profession"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/gray_corner"
                android:drawableStart="@drawable/ic_graduation_cap"
                android:drawablePadding="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:hint="@string/profession_best_suits"
                android:inputType="textPhonetic"
                android:paddingHorizontal="@dimen/_10sdp"
                android:singleLine="true" />

            <AutoCompleteTextView
                android:id="@+id/qualification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/gray_corner"
                android:drawableStart="@drawable/ic_graduation_cap"
                android:drawablePadding="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/qualification"
                android:inputType="textPhonetic"
                android:paddingHorizontal="@dimen/_10sdp"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/experience"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/gray_corner"
                android:drawableStart="@drawable/ic_bagicon"
                android:drawablePadding="@dimen/_10sdp"/>

            <com.hootsuite.nachos.NachoTextView
                android:id="@+id/languages"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/gray_corner"
                android:hint="@string/languages_known"
                android:paddingHorizontal="@dimen/_10sdp"
                android:singleLine="true" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp">

            <TextView
                android:id="@+id/resetBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/green_corner_border"
                android:clickable="true"
                android:elevation="@dimen/_5sdp"
                android:focusable="true"
                android:paddingHorizontal="@dimen/_30sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:text="@string/reset"
                android:textColor="@color/purple_500"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/nextBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/green_btn_bg"
                android:clickable="true"
                android:elevation="@dimen/_5sdp"
                android:focusable="true"
                android:paddingHorizontal="@dimen/_30sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:text="@string/next_sm"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>