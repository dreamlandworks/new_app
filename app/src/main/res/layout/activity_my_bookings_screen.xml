<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey_800"
    tools:context=".ui.user.user_dashboard.drawer_menu.my_bookings.UserMyBookingsScreen">

    <include
        android:id="@+id/toolBar"
        layout="@layout/user_tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/pendingBtn"
            style="@style/filled_button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:background="@drawable/category_bg"
            android:textSize="@dimen/sub_text"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="@string/pending" />

        <TextView
            android:id="@+id/inProgressBtn"
            style="@style/filled_button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sub_text"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_5sdp"
            android:text="@string/in_progress" />

        <TextView
            android:id="@+id/completedBtn"
            style="@style/filled_button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:textSize="@dimen/sub_text"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="@string/completed"
            android:textColor="@color/black"/>

    </LinearLayout>

    <TextView
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="@dimen/sub_text"
        android:text="@string/bookings_are_not_available"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/shimmer_my_booking_layout" />

            <include layout="@layout/shimmer_my_booking_layout" />

            <include layout="@layout/shimmer_my_booking_layout" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>