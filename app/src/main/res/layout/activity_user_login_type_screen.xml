<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_type_bg"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ui.auth.UserLoginTypeScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:gravity="start|center"
        android:orientation="vertical"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:layout_width="@dimen/_600sdp"
            android:layout_height="@dimen/_600sdp"
            android:layout_marginStart="-95dp"
            android:layout_marginTop="-100dp"
            android:scaleType="fitXY"
            android:src="@drawable/login_bg"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:orientation="vertical"
            android:paddingStart="@dimen/_50sdp"
            android:paddingBottom="@dimen/_50sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_back"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing=".06"
                android:text="@string/log_in"
                android:textColor="@color/white"
                android:textSize="@dimen/_28sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="@dimen/_30sdp"
        android:paddingBottom="@dimen/_30sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/choose_profile"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/user_btn_bg"
            style="@style/filled_button_style"
            android:gravity="center_horizontal"
            android:letterSpacing=".1"
            android:text="@string/user" />

        <TextView
            android:id="@+id/serviceProviderBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/user_btn_bg"
            style="@style/filled_button_style"
            android:elevation="@dimen/_5sdp"
            android:letterSpacing=".1"
            android:gravity="center_horizontal"
            android:text="@string/service_provider"/>

    </LinearLayout>

</LinearLayout>