<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/closeBtn"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_gravity="end"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_white_24dp"
            tools:ignore="ContentDescription" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/otp_for_closing"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="@dimen/_10sdp"
        android:textSize="@dimen/title"
        android:textColor="@color/blue"/>

    <View
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_1sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/layout_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/firstNo"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/otp_digit_blue_bg"
            android:gravity="center"
            android:textSize="@dimen/edit_text"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/secondNo"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/otp_digit_blue_bg"
            android:gravity="center"
            android:textSize="@dimen/edit_text"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/thirdNo"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/otp_digit_blue_bg"
            android:textSize="@dimen/edit_text"
            android:gravity="center"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/fourthNo"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/otp_digit_blue_bg"
            android:textSize="@dimen/edit_text"
            android:gravity="center"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <requestFocus />

    </LinearLayout>

    <TextView
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        style="@style/filled_button_style"
        android:background="@drawable/user_btn_bg"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20sdp"/>

</LinearLayout>