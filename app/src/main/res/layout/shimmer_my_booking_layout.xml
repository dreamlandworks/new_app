<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bookingId"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:background="@color/colorGrey"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sub_text"
                    tools:ignore="RelativeOverlap" />

                <TextView
                    android:id="@+id/bookingType"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorGrey"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="@color/blue_700"
                    android:textSize="@dimen/_9sdp"
                    tools:ignore="RelativeOverlap" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:cardBackgroundColor="@color/colorGrey"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:background="@color/colorGrey"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sub_text"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/colorGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/spName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorGrey"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text" />

                <TextView
                    android:id="@+id/timeRemaining"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:background="@color/colorGrey"
                    android:singleLine="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sub_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGrey"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sub_text" />

                    <TextView
                        android:id="@+id/scheduleDate"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGrey"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sub_text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/myLocationText"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGrey"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sub_text" />

                    <TextView
                        android:id="@+id/myLocation"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:background="@color/colorGrey"
                        android:textSize="@dimen/sub_text"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/jobDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:lines="2"
                    android:background="@color/colorGrey"
                    android:textSize="@dimen/sub_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|end"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancelBookingBtn"
                    style="@style/blue_outline_button_style"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/shimmer_category_bg"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:textSize="@dimen/sub_text"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/reScheduleBtn"
                    style="@style/blue_outline_button_style"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/shimmer_category_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:textSize="@dimen/sub_text"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/startBtn"
                    style="@style/filled_button_style"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/shimmer_category_bg"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:textSize="@dimen/sub_text"
                    android:clickable="true"
                    android:focusable="true"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:translationZ="@dimen/_5sdp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:cardBackgroundColor="@color/colorGrey"
            app:cardCornerRadius="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/phoneBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorGrey"
                    android:scaleType="center"
                    android:src="@color/colorGrey"
                    tools:ignore="ContentDescription" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@color/colorGrey" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:cardBackgroundColor="@color/colorGrey"
            app:cardCornerRadius="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/messageBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorGrey"
                    android:scaleType="centerInside"
                    android:src="@color/colorGrey"
                    tools:ignore="ContentDescription" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>